{
  "name": "@lpmini/storybook",
  "version": "0.0.0",
  "dependencies": {
    "@lpmini/lp-studio": "workspace:*"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@lpmini/config-eslint": "workspace:*",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/sveltekit": "^9.1.10",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.43.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "chromatic": "^13.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-storybook": "^9.1.1",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.1",
    "storybook": "^9.1.10",
    "svelte": "^5.40.1",
    "svelte-check": "^4.3.3",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.8",
    "vitest": "^3.2.4"
  },
  "private": true,
  "scripts": {
    "build-storybook": "storybook build -o build",
    "check:eslint": "eslint . --max-warnings 0",
    "check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:svelte:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "chromatic-publish": "npx chromatic --exit-zero-on-changes --exit-once-uploaded",
    "clean": "rm -rf node_modules .svelte-kit .turbo build",
    "dev": "storybook dev -p 9009 --no-open",
    "fix:eslint": "eslint --fix .",
    "prepare": "svelte-kit sync",
    "preview": "http-server build --port 4174",
    "test:storybook": "vitest run --reporter=verbose --no-file-parallelism --no-coverage --passWithNoTests"
  },
  "type": "module"
}

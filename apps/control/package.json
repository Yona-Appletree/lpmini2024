{
	"name": "@lpmini/control",
	"version": "0.0.1",
	"devDependencies": {
		"@lpmini/config-eslint": "workspace:*",
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.43.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.10",
		"@types/node": "^24.9.1",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.33.0",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.40.1",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.10",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.8",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"private": true,
	"scripts": {
		"build": "vite build",
		"check:eslint": "eslint . --max-warnings 0",
		"check:prettier": "prettier --check . '!package.json'",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:typescript": "tsc --noEmit",
		"clean": "rm -rf node_modules .svelte-kit .turbo build",
		"dev": "vite dev",
		"e2e:playwright": "playwright test",
		"fix-staged-all": "lint-staged --config ../../.lintstagedrc.all.json",
		"fix-staged-fast": "lint-staged --config ../../.lintstagedrc.fast.json",
		"fix:eslint": "eslint --fix .",
		"fix:prettier": "prettier --write .",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"test:vitest": "vitest run"
	},
	"type": "module"
}
